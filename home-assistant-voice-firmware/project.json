{
  "name": "home-assistant-voice-firmware",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "home-assistant-voice-firmware/src",
  "targets": {
    "lint": {},
    "initialize": {
      "executor": "nx:run-commands",
      "cache": true,
      "outputs": [],
      "options": {
        "command": "python3 -m pip install --upgrade --no-cache-dir --timeout=900 esphome",
        "cwd": "home-assistant-voice-firmware"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["lint", "initialize"],
      "cache": true,
      "outputs": ["{projectRoot}/.esphome/build"],
      "options": {
        "command": "bash ./.scripts/build.sh",
        "cwd": "home-assistant-voice-firmware"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["initialize"],
      "options": {
        "command": "bash ./.scripts/serve.sh",
        "cwd": "home-assistant-voice-firmware"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m esphome clean home-assistant-voice.elevenlabs.yaml",
        "cwd": "home-assistant-voice-firmware"
      }
    }
  }
}
