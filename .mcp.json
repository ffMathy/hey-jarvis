{
  "mcpServers": {
    "mastra": {
      "command": "npx",
      "args": ["-y", "@mastra/mcp-docs-server"],
      "type": "stdio",
      "tools": ["*"]
    },
    "github-mcp-server": {
      "tools": ["*"],
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "nx-mcp": {
      "type": "stdio",
      "tools": ["*"],
      "command": "npx",
      "args": ["nx-mcp@latest"]
    },
    "playwright": {
      "type": "stdio",
      "tools": ["*"],
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--browser", "chromium", "--no-sandbox"]
    }
  }
}
