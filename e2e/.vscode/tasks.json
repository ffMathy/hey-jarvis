{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build E2E",
      "type": "shell",
      "command": "nx build e2e",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Serve E2E",
      "type": "shell",
      "command": "nx serve e2e",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Watch E2E",
      "type": "shell",
      "command": "nx build e2e --watch",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    }
  ]
}