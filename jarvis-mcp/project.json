{
  "name": "jarvis-mcp",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "jarvis-mcp/src",
  "projectType": "application",
  "targets": {
    "init": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install mastra --global",
        "cwd": "jarvis-mcp"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mastra build --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh jarvis-mcp/op.env mastra dev --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve:mcp": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh jarvis-mcp/op.env npx tsx jarvis-mcp/mastra/mcp-server.ts",
        "cwd": "."
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "./jarvis-mcp/.scripts/docker-build.sh",
        "cwd": "."
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "docker:build"
      ],
      "options": {
        "command": "./jarvis-mcp/.scripts/deploy.sh",
        "cwd": "."
      }
    }
  },
  "tags": []
}