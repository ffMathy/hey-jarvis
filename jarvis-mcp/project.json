{
  "name": "jarvis-mcp",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "jarvis-mcp/src",
  "projectType": "application",
  "targets": {
    "init": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install mastra --global",
        "cwd": "jarvis-mcp"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mastra build --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/run-with-env.sh jarvis-mcp/.env mastra dev --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve:mcp": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/run-with-env.sh jarvis-mcp/.env npx tsx jarvis-mcp/mastra/mcp-server.ts",
        "cwd": "."
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "docker build -f jarvis-mcp/Dockerfile -t ghcr.io/$IMAGE_OWNER/jarvis-mcp:latest -t ghcr.io/$IMAGE_OWNER/jarvis-mcp:$GITHUB_SHA --build-arg BUILDKIT_INLINE_CACHE=1 .",
        "env": {
          "IMAGE_OWNER": "${IMAGE_OWNER}",
          "GITHUB_SHA": "${GITHUB_SHA}"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "docker:build"
      ],
      "options": {
        "commands": [
          "echo $GITHUB_TOKEN | docker login ghcr.io -u $GITHUB_ACTOR --password-stdin",
          "docker push ghcr.io/$IMAGE_OWNER/jarvis-mcp:latest",
          "docker push ghcr.io/$IMAGE_OWNER/jarvis-mcp:$GITHUB_SHA"
        ],
        "parallel": false,
        "env": {
          "GITHUB_TOKEN": "${GITHUB_TOKEN}",
          "GITHUB_ACTOR": "${GITHUB_ACTOR}",
          "IMAGE_OWNER": "${IMAGE_OWNER}",
          "GITHUB_SHA": "${GITHUB_SHA}"
        }
      }
    }
  },
  "tags": []
}