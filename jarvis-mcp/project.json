{
  "name": "jarvis-mcp",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "jarvis-mcp/src",
  "projectType": "application",
  "targets": {
    "init": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install mastra --global",
        "cwd": "jarvis-mcp"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mastra build --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "op run --env-file=\"jarvis-mcp/.env\" --no-masking -- mastra dev --dir jarvis-mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve:mcp": {
      "executor": "nx:run-commands",
      "options": {
        "command": "op run --env-file=\"jarvis-mcp/.env\" --no-masking -- npx tsx jarvis-mcp/mastra/mcp-server.ts",
        "cwd": "."
      }
    }
  },
  "tags": []
}