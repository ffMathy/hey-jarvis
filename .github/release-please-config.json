{
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "changelog-types": [
    {"type": "feat", "section": "Features", "hidden": false},
    {"type": "fix", "section": "Bug Fixes", "hidden": false},
    {"type": "perf", "section": "Performance Improvements", "hidden": false},
    {"type": "refactor", "section": "Code Refactoring", "hidden": false},
    {"type": "docs", "section": "Documentation", "hidden": false},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "hey-jarvis",
      "changelog-path": "CHANGELOG.md",
      "initial-version": "0.1.0",
      "component": "root"
    },
    "home-assistant-addon": {
      "release-type": "node",
      "package-name": "home-assistant-addon",
      "extra-files": [
        {
          "type": "json",
          "path": "config.json",
          "jsonpath": "$.version"
        }
      ],
      "changelog-path": "CHANGELOG.md",
      "initial-version": "0.1.0",
      "component": "home-assistant-addon"
    },
    "mcp": {
      "release-type": "node",
      "package-name": "mcp",
      "changelog-path": "CHANGELOG.md",
      "initial-version": "0.1.0",
      "component": "mcp"
    },
    "elevenlabs": {
      "release-type": "node",
      "package-name": "elevenlabs",
      "changelog-path": "CHANGELOG.md",
      "initial-version": "0.1.0",
      "component": "elevenlabs"
    },
    "home-assistant-voice-firmware": {
      "release-type": "python",
      "changelog-path": "CHANGELOG.md",
      "initial-version": "0.1.0",
      "component": "home-assistant-voice-firmware"
    }
  },
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "group-pull-request-title-pattern": "chore${scope}: release ${version}",
  "separate-pull-requests": false,
  "plugins": [
    {
      "type": "node-workspace",
      "merge": true,
      "updateAllPackages": false
    },
    {
      "type": "linked-versions",
      "groupName": "mcp",
      "components": ["mcp", "home-assistant-addon"]
    }
  ]
}
