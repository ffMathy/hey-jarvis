{
  "name": "home-assistant-addon",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["home-assistant", "addon", "docker"],
  "targets": {
    "initialize": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "commands": ["bunx playwright install chromium", "bunx playwright install-deps"],
        "parallel": false,
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./home-assistant-addon/.scripts/serve.sh",
        "cwd": "."
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["mcp:build"],
      "options": {
        "commands": ["./home-assistant-addon/.scripts/build.sh", "./home-assistant-addon/.scripts/build-test-image.sh"],
        "parallel": false,
        "cwd": "."
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["mcp:deploy"],
      "options": {
        "command": "./home-assistant-addon/.scripts/deploy.sh",
        "cwd": "."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["initialize", "build"],
      "options": {
        "command": "./.scripts/run-with-env.sh home-assistant-addon/op.env bunx playwright test --config=home-assistant-addon/playwright.config.ts",
        "cwd": "."
      }
    },
    "test:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx playwright test --config=home-assistant-addon/playwright.config.ts --ui",
        "cwd": "."
      }
    },
    "test:debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx playwright test --config=home-assistant-addon/playwright.config.ts --debug",
        "cwd": "."
      }
    }
  }
}
