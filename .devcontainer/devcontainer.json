{
  "name": "Hey Jarvis",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "features": {
    "ghcr.io/devcontainers-community/npm-features/typescript:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers-extra/features/nx-npm:1": {},
    "ghcr.io/flexwie/devcontainer-features/op:1": {},
    "ghcr.io/jckimble/devcontainer-features/ngrok:3": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "remoteEnv": {
    "HEY_JARVIS_OPENWEATHERMAP_API_KEY": "${localEnv:HEY_JARVIS_OPENWEATHERMAP_API_KEY}",
    "HEY_JARVIS_GOOGLE_GENERATIVE_AI_API_KEY": "${localEnv:HEY_JARVIS_GOOGLE_GENERATIVE_AI_API_KEY}",
    "HEY_JARVIS_VALDEMARSRO_API_KEY": "${localEnv:HEY_JARVIS_VALDEMARSRO_API_KEY}",
    "HEY_JARVIS_BILKA_EMAIL": "${localEnv:HEY_JARVIS_BILKA_EMAIL}",
    "HEY_JARVIS_BILKA_PASSWORD": "${localEnv:HEY_JARVIS_BILKA_PASSWORD}",
    "HEY_JARVIS_BILKA_API_KEY": "${localEnv:HEY_JARVIS_BILKA_API_KEY}",
    "HEY_JARVIS_BILKA_USER_TOKEN": "${localEnv:HEY_JARVIS_BILKA_USER_TOKEN}",
    "HEY_JARVIS_ALGOLIA_API_KEY": "${localEnv:HEY_JARVIS_ALGOLIA_API_KEY}",
    "HEY_JARVIS_ALGOLIA_APPLICATION_ID": "${localEnv:HEY_JARVIS_ALGOLIA_APPLICATION_ID}",
    "HEY_JARVIS_ELEVENLABS_API_KEY": "${localEnv:HEY_JARVIS_ELEVENLABS_API_KEY}",
    "HEY_JARVIS_ELEVENLABS_AGENT_ID": "${localEnv:HEY_JARVIS_ELEVENLABS_AGENT_ID}",
    "HEY_JARVIS_ELEVENLABS_VOICE_ID": "${localEnv:HEY_JARVIS_ELEVENLABS_VOICE_ID}",
    "HEY_JARVIS_WIFI_SSID": "${localEnv:HEY_JARVIS_WIFI_SSID}",
    "HEY_JARVIS_WIFI_PASSWORD": "${localEnv:HEY_JARVIS_WIFI_PASSWORD}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "nrwl.angular-console",
        "1Password.op-vscode",
        "github.vscode-github-actions"
      ],
      "settings": {
        "typescript.preferences.preferTypeOnlyAutoImports": true,
        "typescript.suggest.autoImports": true
      }
    }
  },
  "containerUser": "root",
  "postCreateCommand": "./.scripts/devcontainer-init.sh",
  "forwardPorts": [3000, 4200, 8080],
  "portsAttributes": {
    "3000": {
      "label": "E2E Application",
      "onAutoForward": "notify"
    },
    "4200": {
      "label": "Jarvis MCP Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Voice Firmware Interface",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "node"
}