{
  "installation": {
    "version": "22.1.0"
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/**/*.spec.[jt]s?(x)",
      "!{projectRoot}/**/*.test.[jt]s?(x)"
    ],
    "sharedGlobals": ["{workspaceRoot}/biome.json"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["lint", "^build"]
    },
    "test": {
      "dependsOn": []
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["lint", "^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["lint", "^build"],
      "inputs": ["default", "^default"]
    },
    "lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/biome.json"],
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write {projectRoot}"
      },
      "dependsOn": []
    },
    "format": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/biome.json"],
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write {projectRoot}"
      }
    },
    "check": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/biome.json"],
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write {projectRoot}"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/docker",
      "options": {
        "buildTarget": "docker:build",
        "runTarget": "docker:run"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "generators": {
    "@nx/js": {
      "library": {
        "linter": "none"
      }
    },
    "@nx/node": {
      "application": {
        "linter": "none"
      },
      "library": {
        "linter": "none"
      }
    }
  },
  "parallel": 1,
  "cacheDirectory": ".nx/cache",
  "useDaemonProcess": true
}
