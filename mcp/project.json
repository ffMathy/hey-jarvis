{
  "name": "mcp",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "mcp/src",
  "projectType": "application",
  "targets": {
    "initialize": {
      "executor": "nx:run-commands",
      "cache": true,
      "outputs": [],
      "options": {
        "command": "bun install mastra@1.0.0-beta.2 --global",
        "cwd": "mcp"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh mcp/op.env mastra dev --dir mcp/mastra --root .",
        "cwd": "."
      }
    },
    "serve:mcp": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh mcp/op.env nx serve:mcp:tsx mcp",
        "cwd": "."
      }
    },
    "serve:mcp:tsx": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx tsx mcp/mastra/mcp-server.ts",
        "cwd": "."
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["initialize"],
      "options": {
        "command": "./mcp/.scripts/build.sh",
        "cwd": "."
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "./mcp/.scripts/deploy.sh",
        "cwd": "."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh mcp/op.env bun test mcp/tests",
        "cwd": "."
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "generate-tokens": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.scripts/run-with-env.sh mcp/op.env bun run mcp/mastra/generate-refresh-tokens.ts",
        "cwd": "."
      }
    }
  },
  "tags": []
}
