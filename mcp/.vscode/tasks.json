{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Initialize MCP",
      "type": "shell",
      "command": "nx init mcp",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Build MCP",
      "type": "shell",
      "command": "nx build mcp",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Serve MCP",
      "type": "shell",
      "command": "nx serve mcp",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Serve MCP Server",
      "type": "shell",
      "command": "nx serve:mcp mcp",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    }
  ]
}
